---
const { user } = Astro.locals;

if (!user) throw new Error("User not found");

const firstLetter = user.name.charAt(0).toUpperCase();
---

<div class="dropdown dropdown-down dropdown-end">
  <button
    id="avatarButton"
    class="border border-transparent hover:border-gray-400 rounded-full p-0.5"
  >
    <div class="avatar placeholder">
      <div class="bg-neutral text-neutral-content rounded-full w-8">
        <span class="text-md">{firstLetter}</span>
      </div>
    </div>
  </button>
  <div
    class="dropdown-content p-4 shadow-lg rounded w-60 bg-white border border-gray-200 z-10"
  >
    <div class="text-sm font-bold">{user.name}</div>
    <div class="text-xs text-neutral-content">{user.email}</div>
    <div class="divider"></div>
    <div class="space-y-2">
      <div>
        <a class="btn btn-ghost btn-sm" href="/update-password">
          Change password
        </a>
      </div>
      <div>
        <a class="btn btn-ghost btn-sm" href="/logout"> Logout</a>
      </div>
    </div>
  </div>
</div>
